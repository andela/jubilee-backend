{
  "name": "jubilee-backend",
  "version": "1.0.0",
  "description": "Barefoot Nomad - Making company travel and accomodation easy and convenient. =======",
  "main": "index.js",
  "scripts": {
    "test": "npm run migrate:reset && npm run migrate && cross-env NODE_ENV=test nyc --reporter=text --reporter=html mocha --timeout 10000 -c --require @babel/register --exit",
    "coveralls": "nyc --reporter=lcov --reporter=text-lcov npm test",
    "migrate:reset": "cross-env NODE_ENV=test sequelize db:migrate:undo:all",
    "migrate": "cross-env NODE_ENV=test sequelize db:migrate",
    "start:dev": "nodemon --exec babel-node ./src/index.js",
    "start": "node dist/index.js", 
    "build": "babel src -d dist",
    "prestart": "sequelize db:migrate",
    "seed": "sequelize db:seed:all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andela/jubilee-backend.git"
  },
