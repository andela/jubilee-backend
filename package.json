    "mongoose-unique-validator": "^2.0.1",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pg": "^7.12.1", 
    "pg-hstore": "^2.3.3",
    "request": "^2.87.0",
