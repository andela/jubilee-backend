{
  "name": "jubilee-backend",
  "version": "1.0.0",
  "description": "Barefoot Nomad - Making company travel and accomodation easy and convenient. =======",
  "main": "index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test nyc --reporter=text --reporter=html mocha --timeout 10000 -c --require @babel/register --exit test/auth.*.*",
    "coveralls": "nyc --reporter=lcov --reporter=text-lcov npm test",
    "migrate:reset": "sequelize db:migrate:undo:all",
    "migrate": "sequelize db:migrate",
    "seed": "sequelize db:seed:all",
    "start:dev": "npm run migrate && nodemon --exec babel-node ./src/index.js",
    "start": "cross-env NODE_ENV=production  node dist/index.js",
    "build": "babel src -d dist",
    "prestart": "cross-env NODE_ENV=production sequelize db:migrate",
    "pretest": "cross-env NODE_ENV=test npm run migrate:reset && cross-env NODE_ENV=test  npm run migrate && cross-env NODE_ENV=test npm run seed"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andela/jubilee-backend.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/andela/jubilee-backend/issues"
  },
  "homepage": "https://github.com/andela/jubilee-backend#readme",
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "@hapi/joi": "^15.1.1",
    "@sendgrid/mail": "^6.4.0",
    "@types/hapi__joi": "^15.0.3",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.4",
    "cross-env": "^5.2.0",
    "dotenv": "^8.0.0",
    "ejs": "^2.6.1",
    "errorhandler": "^1.5.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "express-session": "^1.15.6",
    "joi-password-complexity": "^3.1.0",
    "jsonwebtoken": "^8.5.1",
    "method-override": "^2.3.10",
    "methods": "^1.1.2",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth": "^2.0.0",
    "passport-local": "^1.0.0",
    "pg": "^7.12.1",
    "pg-hstore": "^2.3.3",
