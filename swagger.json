                }
              ],
              "responses": {
                "500": {
                  "description": "Internal Server Error"
                },
                "400": {
                  "description": "Invalid Token/User does not exist",
                  "content": {
                    "application/json; charset=utf-8": {
                      "schema": {
                        "type": "string"
